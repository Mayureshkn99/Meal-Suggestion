                values: ["Breakfast", "Lunch", "Dinner", "Snack"]
        Button:
            text: "Suggest Meal"
            size_hint_y: None
            height: "50dp"
            on_release:
                app.root.current = "ResultPage"
                root.manager.transition.direction = "left"


